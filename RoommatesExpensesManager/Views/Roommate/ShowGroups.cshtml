@model RoommatesExpensesManager.ViewModel.VMGroups
@using RoommatesExpensesManager.Models;


@using (Html.BeginForm("ShowExpense", "Roommate", FormMethod.Post))
{
    <span style="color:blue"> הקבוצות שלי:) </span>
    <br />
    <table class="table table-bordered table-responsive table-hover">
        <tr>
            <td>  מזהה קבוצה  </td>
            <td>מנהל </td>
            <td>עיר </td>
            <td>רחוב </td>
            <td>מספר </td>
          
        </tr>
        @foreach (Group obj in Model.Groups)
        {
            <tr>
                <td>@obj.gid </td>
                <td>@obj.managerUserName </td>
                <td>@obj.city </td>
                <td>@obj.street </td>
                <td>@obj.aptNum </td>
                <td>@Html.ActionLink("צפיה בהוצאות הקבוצה", "ShowExpenses","Roommate",new { gid = @obj.gid },null)
                                      </td>
            </tr>
        }
    </table>

}
